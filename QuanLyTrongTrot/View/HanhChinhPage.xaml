<UserControl x:Class="QuanLyTrongTrot.View.HanhChinhPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuanLyTrongTrot"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <!-- Define Row Structure -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Taskbar -->
            <RowDefinition Height="*" />    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Taskbar Tìm Kiếm -->
        <DockPanel Grid.Row="0" Background="#F3F4F6"  HorizontalAlignment="Stretch">
             <Grid Width="300" Height="30" Margin="5">
                <!-- TextBox để nhập tìm kiếm -->
                <TextBox x:Name="txtSearch" VerticalAlignment="Center" />
                <!-- Placeholder -->
                <TextBlock Text="Tìm kiếm tên đơn vị hành chính theo tên hoặc mã"
                           Foreground="Gray" 
                           VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           IsHitTestVisible="False"
                           Visibility="{Binding Text, ElementName=txtSearch, Converter={StaticResource StringToVisibilityConverter}}" />
            </Grid>
            <Button x:Name="btnSearch" Content="Tìm kiếm" Width="100" Height="30" VerticalAlignment="Center" Margin="5" 
                    HorizontalAlignment="Right" />
        </DockPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <GroupBox Header="Hậu Cảnh" Margin="10" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Mã Đơn Vị -->
                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <TextBlock Text="Mã Đơn Vị:" VerticalAlignment="Center" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <TextBox x:Name="txtMadonvi" />
                    </Border>

                    <!-- Tên Đơn Vị -->
                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <TextBlock Text="Tên Đơn Vị:" VerticalAlignment="Center" />
                    </Border>
                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <TextBox x:Name="txtTendonvi" />
                    </Border>

                    <!-- Cấp Độ ID -->
                    <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <TextBlock Text="Cấp Độ ID:" VerticalAlignment="Center" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <TextBox x:Name="txtCapdoID" />
                    </Border>

                    <!-- Cấp Trên ID -->
                    <Border Grid.Row="3" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <TextBlock Text="Cấp Trên ID:" VerticalAlignment="Center" />
                    </Border>
                    <Border Grid.Row="3" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Padding="5">
                        <TextBox x:Name="txtCaptrenID" />
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
