<UserControl x:Class="QuanLyTrongTrot.View.HanhChinhPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:QuanLyTrongTrot"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Taskbar tìm kiếm -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBox x:Name="txtSearch" Width="200" Margin="0,0,10,0" 
                     PlaceholderText="Nhập từ khóa tìm kiếm..." />
            <Button Content="Tìm kiếm" Click="SearchButton_Click" />
            <Button Content="Thêm mới" Margin="10,0,0,0" Click="AddButton_Click" />
        </StackPanel>

        <!-- Bảng hiển thị dữ liệu -->
        <DataGrid x:Name="dataGridHanhChinh" Grid.Row="1" AutoGenerateColumns="False" Margin="10" 
                  SelectionChanged="DataGridHanhChinh_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                <DataGridTextColumn Header="Tên Cấp Độ" Binding="{Binding TenCapDo}" Width="150" />
                <DataGridTextColumn Header="Mã Đơn Vị" Binding="{Binding MaDonVi}" Width="150" />
                <DataGridTextColumn Header="Tên Đơn Vị" Binding="{Binding TenDonVi}" Width="200" />
                <DataGridTextColumn Header="Cấp Độ ID" Binding="{Binding CapDoID}" Width="100" />
                <DataGridTextColumn Header="Cấp Trên ID" Binding="{Binding CapTrenID}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
